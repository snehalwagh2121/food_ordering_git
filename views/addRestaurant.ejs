<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADD RESTAURANT</title>
    <link rel="stylesheet" href="../css/register.css">
    <link rel="stylesheet" href="../css/index.css">
</head>
<body>
    <div class="navBar">
        <div class="site-title"><a href="/"> DELICIOUS CORNER </a></div>
        <div class="hamburger ">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </div>
        <div class="nav-links">
            <div><a href="about">ABOUT</a></div>       
            <div class="dropdown">
                <div class="dropbtn">USER</div>
                <div class="dropdown-content">
                    <div><a href="login">LOGIN</a></div>
                    <div><a href="register">REGISTER</a></div>
                </div>
            </div>
            <div><a href="#">HELP</a></div>
            <div><a href="#">CONTACT</a></div>
        </div>
    </div>
    <div class="container">
       <div class="registerImage"></div>
        <form action="" method="post" class="registerForm" enctype="multipart/form-data">
            <div class="heading">
                ADD YOUR RESTAURANT :
            </div>
            <div class="formDiv">
                <input type="text" id="rName" placeholder="RESTAURANT NAME" name="rName" class="name text-holder">
            </div>
            <div class="formDiv">
                <input type="text" id="oName" placeholder="OWNER NAME" name="firstName" class="name text-holder">
            </div>
            <div class="formDiv">
                <input type="text" id="oLastName" placeholder="OWNER LAST NAME" name="lastName" class="lastName text-holder">
            </div>
            <div class="formDiv">
                <input type="email" id="email" placeholder="EMAIL" name="email" class="email text-holder">
            </div>
            <div class="formDiv">
                <input type="password" placeholder="PASSWORD" id="password" name="password" class="pass text-holder">
            </div>
            <div class="formDiv">
                <input type="password" placeholder="CONFIRM PASSWORD" id="confPass" class="confPass text-holder">
            </div>
            <div class="formDiv">
                <input type="text" placeholder="ADDRESS" id="address" name="address" class="address text-holder">
            </div>
            <div class="formDiv">
                <input type="text" placeholder="STATE" id="state" name="state" class="state text-holder">
            </div>
            <div class="formDiv">
                <input type="text" placeholder="PHONE NUMBER" id="contact" name="phone" class="contact text-holder">
            </div>
            <div class="formDiv">
                <input type="file" name="image" id="fileToUpload">
            </div>
            <div class="formDiv">
                <button class="submitButton">SUBMIT</button>
            </div>
            <div class="formDiv forgotPass">
                <span > <a href="rLogin">Already a member? LOGIN </a> </span>
            </div>
        </form>
    </div>

    <script src="js/index.js"></script>
</body>
</html>